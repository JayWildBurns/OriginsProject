{
  "name": "Headless",
  "description": "Your head is a little less... attached than you think. By swapping it out with a skull, your head will be free to follow you around.",
  "type": "origins:multiple",
  "headon": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": {
      "should_render": false
    },
    "start_value": 1,
    "min_action": {
      "type": "origins:execute_command",
      "command": "function jorigins:headon",
      "permission_level": 4
    },
    "max_action": {
      "type": "origins:execute_command",
      "command": "function jorigins:headoff",
      "permission_level": 4
    }
  },
  "unequiphead": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "jorigins:zoom_headon",
          "change": 0,
          "operation": "set"
        }
      ]
    },
    "interval": 20,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "head",
          "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
              "item": "minecraft:skeleton_skull"
            }
          }
        },
        {
          "type": "origins:resource",
          "resource": "jorigins:zoom_headon",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "unequipblock": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "jorigins:zoom_headon",
          "change": 1,
          "operation": "set"
        }
      ]
    },
    "interval": 20,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "head",
          "item_condition": {
            "type": "origins:ingredient",
            "ingredient": {
              "item": "minecraft:skeleton_skull"
            }
          },
          "inverted": true
        },
        {
          "type": "origins:resource",
          "resource": "jorigins:zoom_headon",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "headmove": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function jorigins:headmove",
          "permission_level": 4
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "jorigins:zoom_headon",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  }
}