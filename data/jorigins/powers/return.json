{
  "name": "Second Chance",
  "description": "Your unique mastery over death provides you a way out when you die.",
  "type": "origins:multiple",
  "setpoint": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function jorigins:savecoords"
        },
        {
          "type": "origins:trigger_cooldown",
          "power": "jorigins:temporarypowers/returndebuff_cooldown"
        }
      ]
    },
    "cooldown": 20,
    "hud_render": {
      "should_render": false
    },
    "key": {
      "key": "key.origins.primary_active",
      "continuous": false
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:on_block"
        },
        {
          "type": "origins:moving",
          "inverted": true
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:overworld"
        }
      ]
    },
    "hud_render": {
      "should_render": false
    }
  },
  "liferesource": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "start_value": 1,
    "hud_render": {
      "should_render": false
    }
  },
  "preventdeath": {
    "type": "origins:prevent_death",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:clear_effect"
        },
        {
          "type": "origins:execute_command",
          "command": "execute as @s run function jorigins:tp with storage minecraft:teleport_position co_ords"
        },
        {
          "type": "origins:change_resource",
          "resource": "jorigins:return_liferesource",
          "change": -1
        },
        {
          "type": "origins:trigger_cooldown",
        "power": "jorigins:return_returncooldown"
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "resource": "jorigins:return_liferesource",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "reset": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function jorigins:savecoords"
        },
        {
          "type": "origins:change_resource",
          "resource": "jorigins:return_liferesource",
          "change": 1
        }
      ]
    },
    "execute_chosen_when_orb": false
  },
  "returncooldown": {
    "type": "origins:cooldown",
    "cooldown": 1200,
    "hud_render": {
      "should_render": false,
      "bar_index": 3
    }
  },
  "recover": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "jorigins:return_liferesource",
          "change": 1
        }
      ]
    },
    "interval": 20,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "jorigins:return_returncooldown",
          "comparison": "<=",
          "compare_to": 10
        },
        {
          "type": "origins:resource",
          "resource": "jorigins:return_liferesource",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "shaking": {
    "type": "origins:shaking",
    "condition": {
      "type": "origins:resource",
      "resource": "jorigins:return_liferesource",
      "comparison": "==",
      "compare_to": 0
    }
  },
  "overlay_dead": {
    "type": "origins:overlay",
    "hidden": true,
    "sprite": "*:dirt",
    "strength": 0.7,
    "draw_mode": "texture",
    "draw_phase": "below_hud",
    "visible_in_third_person": true,
    "condition": {
      "type": "origins:resource",
      "resource": "jorigins:return_liferesource",
      "compare_to": 0,
      "comparison": "=="
    }
  }
}
