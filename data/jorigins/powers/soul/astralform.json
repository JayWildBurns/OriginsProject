{
	"name": "Astral Form",
	"description": "Disconnected from your body, you are forcibly brought back to it if you wander too far or it is damaged. You can return at will using your active ability.",
	"type": "origins:multiple",
	"togglepower": {
		"type": "origins:active_self",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "function jorigins:astralend",
			"permission_level": 4
		},
		"cooldown": 20,
		"hud_render": {
			"should_render": false
		},
		"key": {
	  		"key": "key.origins.primary_active"
  		}
	},
	"revert": {
		"type": "origins:action_on_death",
		"bientity_action": {
			"type": "origins:target_action",
			"action": [
				{
					"type": "origins:execute_command",
					"command": "function jorigins:astralend",
					"permission_level": 4
				}
			]
		}
	},
	"distance_check":{
	"type": "origins:action_over_time",
  	"entity_action": {
    	"type": "origins:execute_command",
    	"command": "function jorigins:soulcheck",
    	"permission_level": 4
  	},
  "interval": 10
	},
	"setup":
	{
		"type": "origins:action_on_callback",
		"entity_action_lost": {
			"type": "origins:and",
    "actions": [
		{
			"type": "origins:execute_command",
			"command": "kill @e[tag =HostBody]"
		},
		{
			"type": "origins:execute_command",
			"command": "kill @e[type=item_display]"
		}
		]
		},
    "entity_action_gained":{
      "type": "origins:and",
    "actions": [
		{
			"type": "origins:add_velocity",
      "y": 1
		}
		]
    },
		"execute_chosen_when_orb": true
	},
  "nightvision": {
      "type": "origins:night_vision",
      "strength": 0.15,
      "condition": {
        "type": "origins:brightness",
        "comparison": "<=",
        "compare_to": 0.408
      }
  }
}