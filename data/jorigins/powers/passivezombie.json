{
    "name": "Undead Appearance",
    "description": "Zombies recognize you as one of their own, and will not attack unless provoked",
    "type": "origins:multiple",
    "setup": {
    "type": "origins:action_on_callback",
    "execute_chosen_when_orb": true,
    "hidden": true,
      "entity_action_gained": {
        "type": "origins:and",
            "actions": [
              {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "team add ZombieMode"
              },
              {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "team add Unhappy"
              },
              {
                "type": "origins:execute_command",
                "permission_level": 4,
                "command": "team join ZombieMode @s"
              }
            ]
      }
    },
    "passivezm": {
        "type": "origins:action_over_time",
        "interval": 10,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team join ZombieMode @e[type=#zombies,distance=..25,team=!Unhappy]",
                    "permission_level": 4
                },
                {
                  "type": "origins:execute_command",
                  "command": "team leave ZombieMode @e[type=#zombies,distance=25..,team=!Unhappy]",
                  "permission_level": 4
              },
              {
                "type": "origins:execute_command",
                "command": "team leave Unhappy @e[type=#zombies,distance=25..]",
                "permission_level": 4
              }
            ]
        }
    },
    "unzombiemode": {
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "team join Unhappy @e[type=#zombies,distance=0..3]",
            "permission_level": 4
        },
        "target_condition": {
            "type": "origins:or",
            "conditions": [
              {
                "type": "origins:entity_type",
                "entity_type": "minecraft:zombie"
              },
              {
                "type": "origins:entity_type",
                "entity_type": "minecraft:husk"
              },
              {
                "type": "origins:entity_type",
                "entity_type": "minecraft:drowned"
              },
              {
                "type": "origins:entity_type",
                "entity_type": "minecraft:zombie_villager"
              },
              {
                "type": "origins:entity_type",
                "entity_type": "minecraft:zombified_piglin"
              }
            ]
          }
    }
  }