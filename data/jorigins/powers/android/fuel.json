{
  "name": "Fuel",
  "description": "Not finished",
  "type": "origins:multiple",
  "level": {
      "type": "origins:resource",
      "min": 0,
      "max": 800,
      "start_value": 800,
      "hud_render": [
          {
              "sprite_location": "*:resourcecustom.png",
              "bar_index": 2,
              "should_render": true
          }
      ]
  },
  "death":{
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:execute_command",
      "command": "resource set @s jorigins:android/fuel_level 800",
      "permission_level": 4
    },
    "execute_chosen_when_orb": false
  },
  "drain": {
      "type": "origins:action_over_time",
      "entity_action": {
          "type": "origins:if_else_list",
          "actions": [
              {
                  "condition": {
                      "type": "origins:sprinting"
                  },
                  "action": {
                      "type": "origins:change_resource",
                      "resource": "jorigins:android/fuel_level",
                      "change": -15,
                      "operation": "add"
                  }
              },
              {
                  "condition": {
                      "type": "origins:sneaking"
                  },
                  "action": {
                      "type": "origins:change_resource",
                      "resource": "jorigins:android/fuel_level",
                      "change": -3,
                      "operation": "add"
                  }
              },
              {
                  "condition": {
                      "type": "origins:moving",
                      "inverted": false
                  },
                  "action": {
                      "type": "origins:change_resource",
                      "resource": "jorigins:android/fuel_level",
                      "change": -5,
                      "operation": "add"
                  }
              }
          ]
      },
      "interval": 80
  },
  "drain_slower": {
      "type": "origins:action_over_time",
      "entity_action": {
          "type": "origins:if_else_list",
          "actions": [
              {
                  "condition": {
                      "type": "origins:exists"
                  },
                  "action": {
                      "type": "origins:change_resource",
                      "resource": "jorigins:android/fuel_level",
                      "change": -1,
                      "operation": "add"
                  }
              }
          ]
      },
      "interval": 180
  }
}